{
	"manifest_version": 2,
	"name": "RightTab",
	"version": "1.0",
	"description": "RightTab",
     "background": {
        "scripts": ["background.js"],
    	"persistent": false
     },
	"icons": {
		"16": "rt_16.png",
		"32": "rt_32.png"
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content.js"],
			"run_at":"document_end"
		}
	],
	"permissions": [
		"windows",
		"tabs",
		"http://*/*",
		"https://*/*"
	],
	"browser_action": {
		"default_icon": "rt_16.png",
		"default_title":"RightTab"
	}
}